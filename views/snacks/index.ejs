<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
        <link href="/css/snacks.css" rel="stylesheet" />
        <link href="/css/style.css" rel="stylesheet" />
        <title>Snacks - Jake's Food Blog</title>
    </head>

    <body>
        <header class="header">
            <a href="/" class="logo">Jake's Food Blog</a>
            <!-- add image above instead -->

            <nav class="navbar">
                <a href="/recipes">Recipes</a>
                <a href="/fruits">Fruits</a>
                <a href="/veggies">Veggies</a>
                <a href="/meats">Meats</a>
                <a href="/snacks">Snacks</a>
                <a href="/about">About</a>
                <a href="/coffee">Coffee</a>
            </nav>
        </header>
        <br /><br />

        <section class="timeline">
            <div class="timeline-row">
                <div class="timeline-column">
                    <h2 class="title">Snacks<span class="animate" style="--i: 1"></span></h2>
                    <div class="timeline-box">
                        <% for (let index = 0; index < allSnacks.length; index++ ) { %> <% let
                        snacks = allSnacks[index] %>
                        <div class="timeline-content">
                            <div class="content">
                                <div class="year"><i class="bx bxs-calendar"></i>2024 - 2025</div>
                                <h3><%= snacks.name %></h3>
                                <p>Color: <%= snacks.color %></p>
                                <p><%= snacks.description %></p>
                                <a href="/snacks/<%= index %>">Checkout more...</a>
                            </div>
                        </div>
                        <% } %>

                        <span class="animate" style="--i: 2"></span>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>
